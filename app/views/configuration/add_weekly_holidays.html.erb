<% form_for :holiday do |f| %>
<%= select :holiday, :weekdays, [ "#{t('monday')}", "#{t('tuesday')}","#{t('thursday')}","#{t('wednesday')}","#{t('friday')}","#{t('saturday')}", "#{t('sunday')}" ]%>

  <%= submit_tag "#{t('submit')}" %>
<% end %>
<% unless @weekly_holidays.nil? %>
  <% @weekly_holidays.each do |d| %>
    <%= d.config_value %><%= link_to "#{t('delete_text')}", :action=>"delete", :id=>d.id  %>
    
  <% end %>
<% end %>